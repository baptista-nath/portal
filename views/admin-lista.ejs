<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Listagem de Notícias</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap');
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>
<body class="bg-gray-100">
  <!-- Header -->
  <header class="bg-gray-800 text-white shadow-lg">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold">Painel Administrativo</h1>
          <p class="text-gray-300 text-sm">Gerenciamento de Notícias</p>
        </div>
        <div class="flex gap-2">
          <a href="/" class="bg-blue-600 px-4 py-2 rounded hover:bg-blue-700 transition">
            Ver Site
          </a>
          <a href="/logout" class="bg-red-600 px-4 py-2 rounded hover:bg-red-700 transition">
            Sair
          </a>
        </div>
      </div>
    </div>
  </header>

  <main class="container mx-auto px-4 py-8">
    <!-- Mensagens de Sucesso/Erro -->
    <% if (query.sucesso) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
        ✓ Notícia criada com sucesso!
      </div>
    <% } %>
    <% if (query.atualizado) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
        ✓ Notícia atualizada com sucesso!
      </div>
    <% } %>
    <% if (query.deletado) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
        ✓ Notícia deletada com sucesso!
      </div>
    <% } %>
    <% if (query.erro) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        ✗ Erro ao processar a operação.
      </div>
    <% } %>

    <div class="flex justify-between items-center mb-6">
      <h2 class="text-3xl font-bold text-gray-800">Notícias Cadastradas</h2>
      <a href="/admin/noticias/nova" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition font-semibold inline-flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Nova Notícia
      </a>
    </div>

    <% if (noticias.length === 0) { %>
      <div class="bg-white rounded-lg shadow-md p-12 text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <p class="text-xl text-gray-600 mb-4">Nenhuma notícia cadastrada ainda</p>
        <a href="/admin/noticias/nova" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition inline-block">
          Adicionar primeira notícia
        </a>
      </div>
    <% } else { %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Título</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Autor</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% noticias.forEach(noticia => { %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">#<%= noticia.id %></td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <div class="font-medium"><%= noticia.titulo %></div>
                  <% if (noticia.subtitulo) { %>
                    <div class="text-gray-500 text-xs mt-1"><%= noticia.subtitulo.substring(0, 60) %>...</div>
                  <% } %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= noticia.autor %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= new Date(noticia.data_publicacao).toLocaleDateString('pt-BR') %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <a href="/noticia.html?id=<%= noticia.id %>" target="_blank" class="text-blue-600 hover:text-blue-900 mr-3" title="Visualizar">
                    <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  </a>
                  <a href="/admin/noticias/editar/<%= noticia.id %>" class="text-green-600 hover:text-green-900 mr-3" title="Editar">
                    <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                  </a>
                  <form action="/admin/noticias/deletar/<%= noticia.id %>" method="POST" class="inline" onsubmit="return confirm('Tem certeza que deseja deletar esta notícia?')">
                    <button type="submit" class="text-red-600 hover:text-red-900" title="Deletar">
                      <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    </button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>
  </main>
</body>
</html>
